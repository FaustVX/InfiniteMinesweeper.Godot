{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "dotnet",
			"task": "build",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": [],
			"label": "build"
		},
        {
            "label": "open editor",
			"type": "shell",
			"options": {
				"cwd": "${workspaceFolder}/../Godot_v4.4.1-stable_mono_win64/"
			},
			"presentation": {
				"echo": true,
				"reveal": "silent",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			},
            "command": "./Godot_v4.4.1-stable_mono_win64.exe",
			"args": [
				"--path",
				"${workspaceFolder}",
				"--editor",
			]
        }
	]
}
